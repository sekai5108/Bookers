<h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>

<%= link_to "Show", "/books/#{@book.id}" %>
